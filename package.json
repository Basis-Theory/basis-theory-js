{
  "name": "basis-theory-js",
  "version": "1.0.0",
  "private": true,
  "description": "Basis Theory JS monorepo package",
  "repository": "https://github.com/Basis-Theory/basis-theory-js",
  "license": "Apache-2.0",
  "author": {
    "name": "Basis Theory",
    "email": "support@basistheory.com"
  },
  "workspaces": [
    "library",
    "e2e",
    "infrastructure"
  ],
  "prettier": "@basis-theory/eslint-config/prettier",
  "scripts": {
    "build": "yarn workspace @basis-theory/basis-theory-js build",
    "cypress:ci": "cypress run --headless -b chrome",
    "cypress:open": "cypress open",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "release": "yarn workspace @basis-theory/basis-theory-js release",
    "start": "yarn workspace @basis-theory/basis-theory-js start",
    "test": "yarn workspace @basis-theory/basis-theory-js run test",
    "test:e2e": "yarn cypress:ci",
    "infra:outputs": "yarn workspace @basis-theory/basis-theory-js-infrasctructure run outputs",
    "pretty-quick": "pretty-quick --staged",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@basis-theory/eslint-config": "link:../basis-theory-eslint-config",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "concurrently": "5.3.0",
    "cypress": "^8.3.1",
    "eslint": "^7.32.0",
    "husky": "^5.1.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.3.9",
    "typescript": "4.1.4"
  },
  "resolutions": {
    "glob-parent": "^5.1.2",
    "postcss": "^8.2.10",
    "normalize-url": "^5.3.1",
    "is-svg": "^4.2.2",
    "yargs-parser": "^13.1.2",
    "mem": "^4.0.0"
  }
}
