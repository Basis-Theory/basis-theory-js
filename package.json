{
  "name": "basis-theory-js",
  "version": "1.0.0",
  "description": "Basis Theory JS monorepo package",
  "main": "index.js",
  "repository": "https://github.com/Basis-Theory/basis-theory-js",
  "author": "Davi Aquino <davi@basistheory.com>",
  "license": "UNLISCENSED",
  "private": true,
  "workspaces": [
    "lib",
    "server",
    "e2e"
  ],
  "scripts": {
    "build": "concurrently \"yarn build:lib\" \"yarn build:server\" --kill-others-on-fail",
    "build:lib": "yarn workspace @Basis-Theory/basis-theory-js build",
    "build:server": "yarn workspace @Basis-Theory/basis-theory-js-mock-server build",
    "cypress:open": "cypress open",
    "cypress:ci": "cypress run --headless -b chrome",
    "start:server": "yarn workspace @Basis-Theory/basis-theory-js-mock-server start",
    "test": "yarn test:lib",
    "test:lib": "yarn workspace @Basis-Theory/basis-theory-js run test",
    "test:e2e": "yarn cypress:ci"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cypress": "6.4.0",
    "typescript": "4.1.4"
  }
}
