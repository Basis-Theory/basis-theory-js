{
  "name": "basis-theory-js",
  "version": "1.0.0",
  "private": true,
  "description": "Basis Theory JS monorepo package",
  "repository": "https://github.com/Basis-Theory/basis-theory-js",
  "license": "UNLISCENSED",
  "author": {
    "name": "Davi Aquino",
    "email": "davi@basistheory.com"
  },
  "workspaces": [
    "library",
    "server",
    "e2e",
    "infrastructure"
  ],
  "scripts": {
    "build": "concurrently \"yarn build:library\" \"yarn build:server\" --kill-others-on-fail",
    "build:library": "yarn workspace @Basis-Theory/basis-theory-js build",
    "build:server": "yarn workspace @Basis-Theory/basis-theory-js-mock-server build",
    "cypress:ci": "cypress run --headless -b chrome",
    "cypress:open": "cypress open",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "release": "yarn release:library",
    "release:library": "yarn workspace @Basis-Theory/basis-theory-js release",
    "start": "concurrently \"yarn start:library\" \"yarn start:server\" --kill-others-on-fail",
    "start:library": "yarn workspace @Basis-Theory/basis-theory-js start",
    "start:server": "yarn workspace @Basis-Theory/basis-theory-js-mock-server start",
    "test": "yarn test:library",
    "test:e2e": "yarn cypress:ci",
    "test:library": "yarn workspace @Basis-Theory/basis-theory-js run test",
    "infra:outputs": "yarn workspace @Basis-Theory/basis-theory-js-infrasctructure run outputs",
    "pretty-quick": "pretty-quick --staged",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "5.3.0",
    "cypress": "6.4.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.3.9",
    "typescript": "4.1.4"
  }
}
